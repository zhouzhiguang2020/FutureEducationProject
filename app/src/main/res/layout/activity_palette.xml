<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 不限制View布局:android:clipChildren="false"-->

        <RelativeLayout
            android:id="@+id/viewPagerRootView"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:clipChildren="false"
            android:layout_height="300dp">


            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false">

            <com.example.testproject.view.BannerView
                android:id="@+id/bannerView"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_id"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/guidao_a" />

        <TextView
            android:id="@+id/title_tv"
            
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#5fff"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/title_tv1"
            
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#5fff"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/title_tv2"
            android:layout_width="match_parent"
            
            android:layout_height="50dp"
            android:background="#5fff"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/title_tv3"
            
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#5fff"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/title_tv4"
            
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#5fff"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/title_tv5"
            android:layout_width="match_parent"
            
            android:layout_height="50dp"
            android:background="#5fff"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/title_tv6"
            android:layout_width="match_parent"
            
            android:layout_height="50dp"
            android:background="#5fff"
            android:gravity="center"
            android:text="" />

        <TextView
            android:id="@+id/title_tv7"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            
            android:background="#5fff"
            android:gravity="center"
            android:text="" />

        <LinearLayout
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRandomClick"
                android:text="随机图片" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onAnimatorClick"
                android:text="属性动画改变颜色测试" />

        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>

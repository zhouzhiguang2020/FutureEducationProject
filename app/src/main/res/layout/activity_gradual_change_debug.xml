<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="GradualChangeActivityDataBinDing">

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.example.testproject.utils.gradual_change.GradualChangeTv
            android:id="@+id/javaGradualTv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/javaGradualTv">

            <Button
                android:id="@+id/javaLeft"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="从左到右" />

            <Button
                android:id="@+id/javaRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="从右到左" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>